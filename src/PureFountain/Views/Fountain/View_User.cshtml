@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    //IEnumerable<DolphinContext.Data.Models.DolUser> Model_User = ViewBag.Users;
    IEnumerable<DAL.CustomObjects.UserView> Model_User = ViewBag.Users;
    BLL.ApplicationLogic.UserManagement usermgt = new BLL.ApplicationLogic.UserManagement();

    int sn = 0;
}




    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2></h2>
                <button id="btnExport" class="btn btn-primary"><i class="fa fa-file-excel-o"></i> Export To Excel</button>
                <div class="panel-ctrls">
                </div>
            </div>
            <div class="panel-body panel-no-padding">
                <div class="table-responsive">
                    <table id="example" class="table table-striped table-bordered" cellspacing="0" style="width:100%;">
                        <thead>
                            <tr>
                                <th>SN</th>
                                <th>Name</th>
                                <th class="noExl">Email</th>
                                <th>Username</th>
                                <th>Role</th>
                                <th>Image</th>
                                <th>Phone Nos</th>
                                <th>Status</th>
                                <th class="noExl">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var n in Model_User)
                        {

                            sn += 1;
                        <tr class="odd gradeX">
                            <td>@sn</td>
                            <td>@n.FirstName &nbsp; @n.MiddleName @n.LastName</td>
                            <td>@n.UserEmail</td>
                            <td>@n.UserName</td>
                            <td>@n.RoleName</td>
                            <td class="noExl"><img src="~/UserImg/@n.UserImg" style="height:30px;width:50px;"></td>
                            <td>@n.PhoneNos</td>
                            <td>@(Convert.ToBoolean(n.UserStatus) ? "Active" : "Inactive")</td>
                            @*<td><a href="#User_details" data-toggle="modal">Details</a> <a href="@Url.Action("Edit_user", new { Id = @n.UserId })">Edit</a></td>*@
                            <td class="noExl"><button href="#User_details" data-toggle="modal" value="@n.UserId">Details</button> <a href="@Url.Action("Edit_user", new { Id = @n.UserId })">Edit</a></td>


                        </tr>

                        }


                        </tbody>
                    </table>
                    </div>
                    <div class="panel-footer"></div>
                </div>
        </div>
    </div>



<div class="modal fade" id="User_details" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">@ViewBag.Message</h4>


            </div>

            <div class="modal-body">

                <div class="col-md-12">




                </div>

                <hr>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>

            </div>

        </div><!-- /.modal-content -->


    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


<script type="text/javascript">

    $("#btnExport").click(function () {
        var table = $('#example').DataTable();

        table.page.len(-1).draw();
        $('#example').table2excel({
            filename: "ruleName .xls",
            exclude:".noExl"
        });

        table.page.len(10).draw();
    });




</script>