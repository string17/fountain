@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form class="form-horizontal row-border" id="validate-form" data-parsley-validate>
    <div class="col-md-12">
        <div class="col-md-6">

            <div class="form-group">
                <label class="col-sm-3 control-label">First Name</label>
                <div class="col-sm-6">
                    <input type="text" placeholder="First Name" required class="form-control" name="firstname">
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label">Last Name</label>
                <div class="col-sm-6">
                    <input type="text" placeholder="Last Name" required class="form-control" name="lastname">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Company</label>
                <div class="col-sm-6">
                    <select class="form-control" id="source" name="company" required>
                        <option value="">Select Company</option>
                        <option value="AK">Alaska</option>
                        <option value="HI">Hawaii</option>

                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Phone Number</label>
                <div class="col-sm-6">
                    <input type="text" data-parsley-type="digits" placeholder="Phone Number" name="phonenumber" required class="form-control">
                </div>
            </div>


        </div>

        <div class="col-md-6">

            <div class="form-group">
                <label class="col-sm-3 control-label">Middle Name</label>
                <div class="col-sm-6">
                    <input type="text" placeholder="Middle Name" required class="form-control" name="middlename">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Email</label>
                <div class="col-sm-6">
                    <input type="text" data-parsley-type="email" placeholder="Email address" required class="form-control" name="useremail">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Password</label>
                <div class="col-sm-6">
                    <input type="password" data-parsley-minlength="6" placeholder="Password" required class="form-control" name="userpassword">
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-3 control-label">Role</label>
                <div class="col-sm-6">
                    <select class="form-control" id="source" name="userrole" required>
                        <option value="">Select Company</option>
                        <option value="AK">Role</option>
                        <option value="HI">Role</option>

                    </select>
                </div>
            </div>
            <div class="col-lg-9" style="margin-top:25px">
                <div class="btn-toolbar">
                    <span class="btn btn-primary pull-right">Submit</span>
                    <button class="btn btn-default">Cancel</button>
                </div>
            </div>
        </div>
    </div>










</form>
  </div>
