                                    @{ if (item == null)
                                        {
                                            <li>No Menu</li>
                                        }
                                        else
                                        {
                                            var parent = item.Where(menu => menu.Parentid == 0);
                                            //filter Parent Menu
                                            foreach (var parentMenu in parent)
                                            {
                                                bool hasChild = true;
                                                hasChild = item.Where(menu => menu.Parentid == parentMenu.Menuid).Count() > 0 ? true : false;
                                                if (hasChild)
                                                {
                                                    var childmenu = item.Where(menu => menu.Parentid == parentMenu.Menuid);
                                                    <li>
                                                        <a href="javascript:;"><i class="@parentMenu.Linkicon"></i><span>@parentMenu.Menuname</span><span class="badge badge-primary"></span></a>
                                                        <ul class="acc-menu">
                                                            @foreach (var children in childmenu)
                                                            {
                                                                <li><a href="@children.Externalurl"  onclick="pageLoader()">@children.Menuname</a></li>
                                                            }
                                                        </ul>
                                                    </li>
                                                }
                                                else
                                                {
                                                    @:
                                                    <li><a href="@parentMenu.Menuurl"  onclick="pageLoader()"><i class="@parentMenu.Linkicon"></i><span>@parentMenu.Menuname</span><span class="badge badge-success"></span></a></li>
                                                }
                                            }

                                        }
